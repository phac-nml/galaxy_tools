<tool id="proksee_assemble" name="Proksee Assemble" version="1.0.0">
    <description>Assembles bacterial genomes from NGS reads and provides an analysis of the assembly.</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <command detect_errors="exit_code"><![CDATA[

        ln -s $forward_reads '${forward_reads.name}' &&

        proksee assemble --force -o output '${forward_reads.name}'

        #if $reverse_reads
            '$reverse_reads'
        #end if

        #if str($species) != 'auto'
            --species '${species}'
        #end if

    ]]></command>
